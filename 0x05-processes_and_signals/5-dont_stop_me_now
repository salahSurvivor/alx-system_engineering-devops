#!/usr/bin/env bash
# This Bash script starts the "4-to_infinity_and_beyond" process, captures its PID,
# and allows the user to stop it gracefully.

# Start the 4-to_infinity_and_beyond process in the background
./4-to_infinity_and_beyond &

# Capture the PID of the background process
PID=$!

# Wait for user input to stop the process
read -p "Press Enter to stop the 4-to_infinity_and_beyond process..."

# Use the kill command to terminate the process
kill $PID

echo "4-to_infinity_and_beyond process has been terminated."
